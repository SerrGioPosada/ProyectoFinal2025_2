<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.ManageVehiclesController"
      spacing="15" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section con título y botones principales -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Gestionar Vehículos" styleClass="page-title"/>
            <Label text="Administra los vehículos del sistema" styleClass="info-label"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        </VBox>
        <Button text="Actualizar" onAction="#handleRefresh" styleClass="btn-primary"/>
    </HBox>

    <!-- Collapsible Tab System -->
    <VBox fx:id="collapsibleTabSection" spacing="0" styleClass="collapsible-tab-section, tab-section-expanded"
          VBox.vgrow="NEVER" minHeight="60">
        <!-- Header with Collapse Button -->
        <HBox styleClass="tab-header-with-collapse" minHeight="60" prefHeight="60" maxHeight="60">
            <HBox styleClass="tab-nav-bar" HBox.hgrow="ALWAYS">
                <Button fx:id="btnTabStats" text="Estadísticas" styleClass="tab-button, tab-button-active"
                        onAction="#switchToStatsTab"/>
                <Button fx:id="btnTabAddVehicle" text="Agregar Vehículo" styleClass="tab-button"
                        onAction="#switchToAddVehicleTab"/>
                <Button fx:id="btnTabFilters" text="Filtros" styleClass="tab-button"
                        onAction="#switchToFiltersTab"/>
            </HBox>
            <Button fx:id="btnCollapseToggle" text="▲" styleClass="collapse-toggle-btn"
                    onAction="#toggleCollapse"/>
        </HBox>

        <!-- Tab Content Container -->
        <StackPane styleClass="tab-content-container">
            <!-- Stats Tab Content -->
            <HBox fx:id="statsTabContent" spacing="15" managed="true" visible="true">
                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Total Vehículos" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblTotal" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
                </VBox>

                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Disponibles" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
                    <Label fx:id="lblAvailable" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                </VBox>

                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="En Uso" style="-fx-text-fill: #ffc107; -fx-font-size: 12px;"/>
                    <Label fx:id="lblInUse" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                </VBox>
            </HBox>

            <!-- Add Vehicle Tab Content -->
            <VBox fx:id="addVehicleTabContent" spacing="15" managed="false" visible="false">
                <GridPane hgap="10" vgap="10" styleClass="tab-form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <VBox spacing="5" GridPane.columnIndex="0">
                        <Label text="Placa:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtPlate" promptText="ABC123" styleClass="text-field"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1">
                        <Label text="Capacidad (kg):" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtCapacity" promptText="1000" styleClass="text-field"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="2">
                        <Label text="Tipo:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="cmbType" prefWidth="200" styleClass="combo-box"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="3" alignment="CENTER_LEFT">
                        <CheckBox fx:id="chkAvailable" text="Disponible" styleClass="checkbox" selected="true"/>
                        <Button fx:id="btnAddVehicle" text="Agregar Vehículo" onAction="#handleAddVehicle" styleClass="btn-success"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Filters Tab Content -->
            <VBox fx:id="filtersTabContent" spacing="10" managed="false" visible="false">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <ComboBox fx:id="filterType" prefWidth="200" styleClass="combo-box"/>
                    <ComboBox fx:id="filterAvailability" prefWidth="150" styleClass="combo-box"/>
                    <TextField fx:id="txtSearch" promptText="Buscar por placa..."
                               prefWidth="250" styleClass="search-field"/>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>

    <!-- Table -->
    <TableView fx:id="tableVehicles" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="colPlate" text="Placa" prefWidth="150"/>
            <TableColumn fx:id="colType" text="Tipo" prefWidth="150"/>
            <TableColumn fx:id="colCapacity" text="Capacidad" prefWidth="150"/>
            <TableColumn fx:id="colAvailable" text="Disponibilidad" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No se encontraron vehículos" styleClass="table-placeholder"/>
        </placeholder>
    </TableView>

    <!-- Information Section -->
    <HBox spacing="10" styleClass="info-section" alignment="CENTER_LEFT">
        <Label text="Haga clic derecho en un vehículo para ver opciones (Editar, Cambiar Estado, Eliminar)"
               style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-style: italic;"/>
    </HBox>

</VBox>
