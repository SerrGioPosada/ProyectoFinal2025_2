<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.ManageUsersController"
            spacing="15" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- BLOQUE 1: Header Section con título y botones principales -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Gestión de Usuarios" styleClass="page-title"/>
            <Label text="Administra todos los usuarios del sistema" styleClass="info-label"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        </VBox>
        <TextField fx:id="txtSearch" promptText="Buscar por nombre o email..."
                   prefWidth="250" styleClass="search-field"/>
        <Button fx:id="btnAddUser" text="+ Nuevo Usuario" styleClass="btn-primary"
                onAction="#handleAddUser"/>
    </HBox>

    <!-- BLOQUE 2: Stats Cards (sin acordeón) -->
    <HBox spacing="15" styleClass="stats-container">
        <VBox styleClass="info-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Total Usuarios" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalUsers" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
        </VBox>

        <VBox styleClass="info-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Usuarios Activos" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
            <Label fx:id="lblActiveUsers" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>

        <VBox styleClass="info-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Usuarios Inactivos" style="-fx-text-fill: #dc3545; -fx-font-size: 12px;"/>
            <Label fx:id="lblInactiveUsers" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
        </VBox>
    </HBox>

    <!-- Table Section -->
    <TableView fx:id="tableUsers" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="colImage" text="" prefWidth="60" minWidth="60" maxWidth="60" sortable="false" resizable="false"/>
            <TableColumn fx:id="colName" text="Nombre" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="colLastName" text="Apellido" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="colEmail" text="Correo Electrónico" prefWidth="200" minWidth="150"/>
            <TableColumn fx:id="colPhone" text="Teléfono" prefWidth="110" minWidth="100"/>
            <TableColumn fx:id="colOrders" text="Pedidos" prefWidth="80" minWidth="70"/>
            <TableColumn fx:id="colAddresses" text="Direcciones" prefWidth="90" minWidth="80"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="100" minWidth="90"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No se encontraron usuarios" styleClass="table-placeholder"/>
        </placeholder>
    </TableView>

    <!-- Information Section -->
    <HBox spacing="10" styleClass="info-section" alignment="CENTER_LEFT">
        <Label text="Haga clic derecho en un usuario para ver opciones (Editar, Cambiar Estado, Ver Pedidos, Eliminar)"
               style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-style: italic;"/>
    </HBox>

</VBox>
