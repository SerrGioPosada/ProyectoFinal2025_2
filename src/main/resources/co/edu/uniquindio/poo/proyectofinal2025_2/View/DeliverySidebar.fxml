<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="176"
            styleClass="sidebar"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.DeliverySidebarController">

    <children>
        <!-- Sidebar panel -->
        <AnchorPane fx:id="slider"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">

            <children>
                <!-- Top buttons container -->
                <VBox alignment="TOP_CENTER"
                      spacing="5"
                      AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="131.0">

                    <children>
                        <Button fx:id="btnDashboard" text="Panel de Control" styleClass="sidebar-button"/>
                        <Button fx:id="btnMyShipments" text="Mis Envíos" styleClass="sidebar-button"/>
                        <Button fx:id="btnRouteMap" text="Hoja de Ruta" styleClass="sidebar-button"/>
                        <Button fx:id="btnHistory" text="Historial y Ganancias" styleClass="sidebar-button"/>
                        <Button fx:id="btnNotifications" text="Notificaciones" styleClass="sidebar-button"/>
                        <Button fx:id="btnMyVehicles" text="Mis Vehículos" styleClass="sidebar-button"/>
                        <Button fx:id="btnProfile" text="Mi Perfil" styleClass="sidebar-button"/>
                    </children>
                </VBox>

                <!-- Bottom buttons container -->
                <VBox alignment="BOTTOM_CENTER"
                      spacing="5"
                      AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0"
                      AnchorPane.bottomAnchor="10.0">

                    <children>
                        <Button fx:id="btnLogout" text="Cerrar Sesión" styleClass="sidebar-button"/>
                    </children>
                </VBox>

                <!-- Delivery person profile picture -->
                <ImageView fx:id="imgUserImage"
                           fitHeight="101.0"
                           fitWidth="109.0"
                           layoutX="32.0"
                           layoutY="17.0"
                           pickOnBounds="true"
                           preserveRatio="true"
                           styleClass="profile-image"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
