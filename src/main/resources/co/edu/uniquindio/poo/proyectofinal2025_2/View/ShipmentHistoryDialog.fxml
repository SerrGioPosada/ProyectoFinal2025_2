<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.ShipmentHistoryDialogController"
      spacing="15" styleClass="dialog-content"
      prefWidth="600" prefHeight="500">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="dialog-header">
        <Label text="ðŸ“‹ Historial Completo" styleClass="dialog-title" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="âœ•" styleClass="btn-close" onAction="#handleClose"
                style="-fx-background-color: transparent; -fx-text-fill: #999; -fx-font-size: 18px; -fx-cursor: hand;"/>
    </HBox>

    <Separator/>

    <!-- Shipment Info -->
    <HBox spacing="20" styleClass="info-section">
        <VBox spacing="5">
            <Label text="ID del EnvÃ­o:" styleClass="info-label" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
