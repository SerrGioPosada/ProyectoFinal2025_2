    <!-- Footer -->
    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="dialog-footer">
        <Button text="Cerrar" styleClass="btn-secondary" onAction="#handleClose" prefWidth="100"/>
    </HBox>

