<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.DeliveryProfileController"
            styleClass="scroll-base"
            fitToWidth="true">

<VBox spacing="20" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <Label text="Mi Perfil" styleClass="page-title"/>
    </HBox>

    <!-- Profile Info Card -->
    <VBox spacing="20" styleClass="profile-container">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Profile Picture and Basic Info -->
        <HBox spacing="30" alignment="CENTER_LEFT">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imgProfile" fitWidth="120" fitHeight="120"
                          preserveRatio="true" styleClass="profile-image-large"/>
                <Button text="Cambiar Foto" styleClass="btn-secondary" onAction="#handleChangePhoto"/>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Nombre:" styleClass="profile-label"/>
                    <Label fx:id="lblName" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="profile-label"/>
                    <Label fx:id="lblEmail" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Teléfono:" styleClass="profile-label"/>
                    <Label fx:id="lblPhone" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Documento:" styleClass="profile-label"/>
                    <Label fx:id="lblDocumentId" text="--" styleClass="profile-value"/>
                </HBox>
            </VBox>
        </HBox>

        <Separator/>

        <!-- Delivery-Specific Information -->
        <VBox spacing="15">
            <Label text="Información de Repartidor" styleClass="section-title"/>
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Estado:" styleClass="profile-label"/>
                    <Label fx:id="lblAvailability" text="--" styleClass="profile-value"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Área de Cobertura:" styleClass="profile-label"/>
                    <Label fx:id="lblCoverageArea" text="--" styleClass="profile-value"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Total Envíos:" styleClass="profile-label"/>
                    <Label fx:id="lblTotalShipments" text="--" styleClass="profile-value"/>
                </HBox>
            </GridPane>
        </VBox>

        <Separator/>

        <!-- Vehicle Information -->
        <VBox spacing="15">
            <Label text="Vehículo Asignado" styleClass="section-title"/>
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Placa:" styleClass="profile-label"/>
                    <Label fx:id="lblVehiclePlate" text="--" styleClass="profile-value"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Tipo:" styleClass="profile-label"/>
                    <Label fx:id="lblVehicleType" text="--" styleClass="profile-value"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Capacidad:" styleClass="profile-label"/>
                    <Label fx:id="lblVehicleCapacity" text="--" styleClass="profile-value"/>
                </HBox>
            </GridPane>
        </VBox>

        <Separator/>

        <!-- Edit Personal Data Card -->
        <VBox styleClass="profile-option-card" spacing="10">
            <Label text="Datos Personales" styleClass="option-card-title"/>
            <Label text="Actualiza tu información personal y de contacto"
                   styleClass="option-card-description" wrapText="true"/>
            <Button text="Editar Datos" styleClass="btn-primary" maxWidth="200"
                   onAction="#handleEditPersonalData"/>
        </VBox>
    </VBox>

    <!-- Change Password Section -->
    <VBox spacing="20" styleClass="profile-container">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Cambiar Contraseña" styleClass="section-title"/>
        <Label text="Por tu seguridad, te recomendamos cambiar tu contraseña periódicamente"
               styleClass="info-label" wrapText="true"/>

        <VBox spacing="15" maxWidth="500">
            <!-- Current Password Field -->
            <VBox spacing="5">
                <Label text="Contraseña Actual:" styleClass="label-bold"/>
                <PasswordField fx:id="txtCurrentPassword" promptText="Ingresa tu contraseña actual" styleClass="modern-input"/>
            </VBox>

            <!-- New Password Field -->
            <VBox spacing="5">
                <Label text="Nueva Contraseña:" styleClass="label-bold"/>
                <PasswordField fx:id="txtNewPassword" promptText="Ingresa tu nueva contraseña" styleClass="modern-input"/>
                <Label text="Mínimo 8 caracteres" styleClass="info-label-small"/>
            </VBox>

            <!-- Confirm New Password Field -->
            <VBox spacing="5">
                <Label text="Confirmar Nueva Contraseña:" styleClass="label-bold"/>
                <PasswordField fx:id="txtConfirmPassword" promptText="Confirma tu nueva contraseña" styleClass="modern-input"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Actualizar Contraseña" styleClass="btn-primary"
                       onAction="#handleUpdatePassword"/>
                <Button text="Cancelar" styleClass="btn-secondary"
                       onAction="#handleCancelPasswordChange"/>
            </HBox>
        </VBox>
    </VBox>

</VBox>
</ScrollPane>
