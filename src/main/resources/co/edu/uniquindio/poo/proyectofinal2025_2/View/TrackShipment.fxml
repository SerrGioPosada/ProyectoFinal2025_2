<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.TrackShipmentController"
      spacing="20" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <Label text="Rastrear Envío" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Volver" styleClass="btn-secondary" onAction="#handleBack"/>
    </HBox>

    <!-- Search Section -->
    <HBox spacing="10" styleClass="filter-section" alignment="CENTER_LEFT">
        <TextField fx:id="txtShipmentId" promptText="Ingresa el ID del envío..." styleClass="search-field" HBox.hgrow="ALWAYS"/>
        <Button text="Rastrear" styleClass="btn-primary" onAction="#handleTrack" prefWidth="100"/>
    </HBox>

    <!-- Tracking Content -->
    <VBox fx:id="trackingContent" spacing="20" VBox.vgrow="ALWAYS">

        <!-- Shipment Info Card -->
        <VBox spacing="10" styleClass="info-card">
            <Label text="Información del Envío" styleClass="card-title"/>
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120"/>
                    <ColumnConstraints minWidth="200" prefWidth="250"/>
                </columnConstraints>

                <Label text="ID:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblShipmentId" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Estado:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lblStatus" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Creado:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="lblCreated" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Entrega Estimada:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="lblEstimated" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
        </VBox>

        <!-- Status Timeline (Dynamic) -->
        <VBox spacing="10" styleClass="timeline-card">
            <Label text="Historial Completo (Orden + Envío)" styleClass="card-title"/>

            <!-- Dynamic timeline container -->
            <VBox fx:id="timelineContainer" spacing="5"/>
        </VBox>

        <!-- Delivery Person Info -->
        <VBox fx:id="deliveryPersonCard" spacing="10" styleClass="info-card">
            <Label text="Repartidor" styleClass="card-title"/>
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120"/>
                    <ColumnConstraints minWidth="200" prefWidth="250"/>
                </columnConstraints>

                <Label text="Nombre:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblDeliveryPersonName" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Teléfono:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lblDeliveryPersonPhone" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Zona:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="lblDeliveryPersonZone" text="--" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
        </VBox>

    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" styleClass="action-section" alignment="CENTER_LEFT">
        <Button text="Actualizar" styleClass="btn-primary" onAction="#handleRefresh"/>
        <Button text="Ver Detalles Completos" styleClass="btn-secondary" onAction="#handleViewDetails"/>
    </HBox>

</VBox>
