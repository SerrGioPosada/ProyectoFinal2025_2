<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.AddDeliveryPersonDialogController"
            prefWidth="500" prefHeight="700">

    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="login-scroll" pannable="true"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <StackPane alignment="CENTER" maxWidth="Infinity" prefWidth="Infinity" styleClass="login-background-pane">

            <VBox styleClass="login-container" alignment="CENTER" spacing="20">

                <!-- Header with Circle Logo Style -->
                <HBox alignment="CENTER">
                    <StackPane styleClass="logo-circle">
                        <Label text="RP" styleClass="logo-text"/>
                    </StackPane>
                </HBox>

                <!-- Welcome Text -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Agregar Nuevo Repartidor" styleClass="welcome-text"/>
                    <Label text="Completa el formulario para registrar un nuevo repartidor"
                           styleClass="welcome-subtext"/>
                </VBox>

                <!-- Form Fields -->
                <VBox spacing="15" styleClass="form-container">

                    <!-- Name Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblNameFloat" text="NOMBRE" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <TextField fx:id="txtName" styleClass="modern-input" promptText="NOMBRE"/>
                        </StackPane>
                        <Label fx:id="lblNameError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Last Name Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblLastNameFloat" text="APELLIDO" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <TextField fx:id="txtLastName" styleClass="modern-input" promptText="APELLIDO"/>
                        </StackPane>
                        <Label fx:id="lblLastNameError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Email Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblEmailFloat" text="CORREO ELECTRÓNICO" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <TextField fx:id="txtEmail" styleClass="modern-input" promptText="CORREO ELECTRÓNICO"/>
                        </StackPane>
                        <Label fx:id="lblEmailError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Phone Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblPhoneFloat" text="TELÉFONO" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <TextField fx:id="txtPhone" styleClass="modern-input" promptText="TELÉFONO"/>
                        </StackPane>
                        <Label fx:id="lblPhoneError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblPasswordFloat" text="CONTRASEÑA" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <PasswordField fx:id="txtPassword" styleClass="modern-input" promptText="CONTRASEÑA"/>
                            <TextField fx:id="txtPasswordVisible" styleClass="modern-input" promptText="CONTRASEÑA" visible="false" managed="false"/>
                            <Button fx:id="btnTogglePassword" onAction="#togglePasswordVisibility"
                                    styleClass="icon-button"
                                    StackPane.alignment="CENTER_RIGHT"
                                    style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 5 10;"/>
                        </StackPane>
                        <Label fx:id="lblPasswordError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Confirm Password Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblConfirmPasswordFloat" text="CONFIRMAR CONTRASEÑA" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <PasswordField fx:id="txtConfirmPassword" styleClass="modern-input" promptText="CONFIRMAR CONTRASEÑA"/>
                            <TextField fx:id="txtConfirmPasswordVisible" styleClass="modern-input" promptText="CONFIRMAR CONTRASEÑA" visible="false" managed="false"/>
                            <Button fx:id="btnToggleConfirmPassword" onAction="#toggleConfirmPasswordVisibility"
                                    styleClass="icon-button"
                                    StackPane.alignment="CENTER_RIGHT"
                                    style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 5 10;"/>
                        </StackPane>
                        <Label fx:id="lblConfirmPasswordError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Document ID Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblDocumentIdFloat" text="DOCUMENTO DE IDENTIDAD" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <TextField fx:id="txtDocumentId" styleClass="modern-input" promptText="DOCUMENTO DE IDENTIDAD"/>
                        </StackPane>
                        <Label fx:id="lblDocumentIdError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- Coverage Area Field -->
                    <VBox spacing="3">
                        <Label fx:id="lblCoverageAreaFloat" text="ÁREA DE COBERTURA" styleClass="floating-label-top"/>
                        <StackPane styleClass="input-container">
                            <ComboBox fx:id="cmbCoverageArea" maxWidth="Infinity" styleClass="modern-input"
                                      promptText="ÁREA DE COBERTURA"/>
                        </StackPane>
                        <Label fx:id="lblCoverageAreaError" styleClass="validation-error" visible="false" managed="false"/>
                    </VBox>

                    <!-- General Error Message -->
                    <Label fx:id="lblError" styleClass="error-label" visible="false" managed="false"/>

                    <!-- Save Button -->
                    <Button text="GUARDAR REPARTIDOR" onAction="#handleSave" styleClass="signin-button"/>

                    <!-- Cancel Button -->
                    <Button text="Cancelar" onAction="#handleCancel" styleClass="secondary-button"/>

                </VBox>

                <!-- Espaciado inferior -->
                <VBox prefHeight="30"/>

            </VBox>
        </StackPane>
    </ScrollPane>
</AnchorPane>
