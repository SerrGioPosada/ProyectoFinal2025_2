<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<!-- The ScrollPane is the root element -->
<ScrollPane fitToWidth="true" fitToHeight="true" styleClass="login-scroll" pannable="true"
            stylesheets="@../Style.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.proyectofiinal2025_2.Controller.LoginController">

   <!-- This StackPane will now force itself to fill the ScrollPane's width and have the background color -->
   <StackPane alignment="CENTER" maxWidth="Infinity" prefWidth="Infinity" styleClass="login-background-pane">

      <VBox styleClass="login-container" alignment="CENTER" spacing="25">

         <!-- Wrapper HBox to correctly center the logo circle -->
         <HBox alignment="CENTER">
            <StackPane styleClass="logo-circle">
               <Label text="SF" styleClass="logo-text"/>
            </StackPane>
         </HBox>

         <!-- Welcome Text -->
         <VBox alignment="CENTER" spacing="5">
            <Label text="¡Hola!" styleClass="welcome-text"/>
            <Label text="Ingresa los datos para iniciar Sesión" styleClass="welcome-text"/>
         </VBox>

         <!-- Form Fields -->
         <VBox spacing="20" styleClass="form-container">

            <!-- Email Field -->
            <VBox spacing="5">
               <Label fx:id="lblEmailFloat" text="CORREO ELECTRÓNICO" styleClass="floating-label-top"/>
               <StackPane styleClass="input-container">
                  <TextField fx:id="txtEmail" styleClass="modern-input" promptText="CORREO ELECTRÓNICO"/>
               </StackPane>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
               <Label fx:id="lblPasswordFloat" text="CONTRASEÑA" styleClass="floating-label-top"/>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <StackPane styleClass="input-container" HBox.hgrow="ALWAYS">
                     <PasswordField fx:id="txtPassword" styleClass="modern-input" promptText="CONTRASEÑA"/>
                     <TextField fx:id="txtPasswordVisible" styleClass="modern-input" promptText="CONTRASEÑA" visible="false" managed="false"/>
                  </StackPane>
                  <ImageView fx:id="imgTogglePassword" styleClass="password-toggle-outside" fitWidth="24" fitHeight="24" preserveRatio="true" pickOnBounds="true"/>
               </HBox>
            </VBox>

            <!-- Keep me signed in -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <CheckBox fx:id="chkKeepSignedIn" styleClass="modern-checkbox"/>
               <Label text="Mantenerme conectado" styleClass="checkbox-label"/>
            </HBox>

            <!-- Sign In Button -->
            <Button fx:id="btnLoginPane" text="INICIAR SESIÓN" styleClass="signin-button"/>

            <!-- Error Label -->
            <Label fx:id="lblError" styleClass="error-label" visible="false" managed="false"/>

            <!-- Forgot Password -->
            <Label fx:id="lblForgotPassword" text="¿Olvidaste tu contraseña?" styleClass="link-label"/>

            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10">
               <Separator styleClass="divider" HBox.hgrow="ALWAYS"/>
               <Label text="o" styleClass="divider-text"/>
               <Separator styleClass="divider" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Google Sign In -->
            <Label fx:id="googleLoginLabel" text="Iniciar Sesión con Google" styleClass="google-link"/>

         </VBox>

         <!-- Espaciado inferior para asegurar scroll -->
         <VBox prefHeight="50"/>

      </VBox>
   </StackPane>
</ScrollPane>
