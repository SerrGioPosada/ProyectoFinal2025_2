                    </children>
                </VBox>

                <!-- User profile picture -->
                <ImageView fx:id="imgUserImage" fitHeight="101.0" fitWidth="109.0" layoutX="32.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
