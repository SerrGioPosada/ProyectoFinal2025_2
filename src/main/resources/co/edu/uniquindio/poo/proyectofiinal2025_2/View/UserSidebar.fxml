            <children>
                <VBox alignment="TOP_CENTER" prefHeight="204.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="131.0">

                    <children>
                        <Separator visible="false" />

                        <Button fx:id="btnLogin" prefHeight="38.0" prefWidth="170.0" styleClass="my-button" text="INICIAR SESIÓN" textFill="WHITE">
