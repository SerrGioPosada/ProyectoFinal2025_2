<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.proyectofiinal2025_2.Controller.AdminProfileController"
      spacing="20" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <Label text="Mi Perfil - Administrador" styleClass="page-title"/>
    </HBox>

    <!-- Profile Info Card -->
    <VBox spacing="20" styleClass="profile-container">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Profile Picture and Basic Info -->
        <HBox spacing="30" alignment="CENTER_LEFT">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imgProfile" fitWidth="120" fitHeight="120"
                          preserveRatio="true" styleClass="profile-image-large"/>
                <Button text="Cambiar Foto" styleClass="btn-secondary" onAction="#handleChangePhoto"/>
            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Nombre:" styleClass="profile-label"/>
                    <Label fx:id="lblName" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="profile-label"/>
                    <Label fx:id="lblEmail" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Teléfono:" styleClass="profile-label"/>
                    <Label fx:id="lblPhone" text="--" styleClass="profile-value"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Rol:" styleClass="profile-label"/>
                    <Label text="Administrador" styleClass="profile-value" style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Miembro desde:" styleClass="profile-label"/>
                    <Label fx:id="lblMemberSince" text="--" styleClass="profile-value"/>
                </HBox>
            </VBox>
        </HBox>

        <Separator/>

        <!-- Profile Options Grid -->
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <!-- Edit Personal Data Card -->
            <VBox styleClass="profile-option-card" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Datos Personales" styleClass="option-card-title"/>
                <Label text="Actualiza tu información personal y de contacto"
                       styleClass="option-card-description" wrapText="true"/>
                <Button text="Editar Datos" styleClass="btn-primary" maxWidth="Infinity"
                       onAction="#handleEditPersonalData"/>
            </VBox>

            <!-- Change Password Card -->
            <VBox styleClass="profile-option-card" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Contraseña" styleClass="option-card-title"/>
                <Label text="Cambia tu contraseña para mantener tu cuenta segura"
                       styleClass="option-card-description" wrapText="true"/>
                <Button text="Cambiar Contraseña" styleClass="btn-primary" maxWidth="Infinity"
                       onAction="#handleChangePassword"/>
            </VBox>

            <!-- System Stats Card (Admin Only) -->
            <VBox styleClass="profile-option-card" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Estadísticas del Sistema" styleClass="option-card-title"/>
                <VBox spacing="5">
                    <HBox spacing="10">
                        <Label text="Usuarios totales:" styleClass="form-label-small"/>
                        <Label fx:id="lblTotalUsers" text="--" styleClass="form-label-small"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Envíos activos:" styleClass="form-label-small"/>
                        <Label fx:id="lblActiveShipments" text="--" styleClass="form-label-small"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Repartidores:" styleClass="form-label-small"/>
                        <Label fx:id="lblTotalDeliveryPersons" text="--" styleClass="form-label-small"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Delete Account Card -->
            <VBox styleClass="profile-option-card-danger" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label text="Eliminar Cuenta" styleClass="option-card-title"/>
                <Label text="Elimina permanentemente tu cuenta y todos tus datos"
                       styleClass="option-card-description" wrapText="true"/>
                <Button text="Eliminar Cuenta" styleClass="btn-danger" maxWidth="Infinity"
                       onAction="#handleDeleteAccount"/>
            </VBox>
        </GridPane>
    </VBox>

</VBox>
