<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.UserPaymentReceiptsController"
      spacing="20" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Comprobantes de Pago" styleClass="page-title"/>
            <Label text="Revisa tus pagos y descarga comprobantes" styleClass="info-label"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Filter by Status -->
        <ComboBox fx:id="cmbStatusFilter" promptText="Filtrar por estado" prefWidth="180" styleClass="filter-combo"/>
    </HBox>

    <!-- Stats Section -->
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="stats-container">
        <VBox styleClass="info-card" spacing="5" prefWidth="200" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Total Pagos" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalPayments" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
        </VBox>

        <VBox styleClass="info-card" spacing="5" prefWidth="200" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Total Pagado" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalAmount" text="\$0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>
    </HBox>

    <!-- Payment Receipts Table -->
    <TableView fx:id="receiptsTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="colInvoiceNumber" text="# Factura" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="colPaymentDate" text="Fecha" prefWidth="150" minWidth="130"/>
            <TableColumn fx:id="colAmount" text="Monto" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="colPaymentMethod" text="Método" prefWidth="150" minWidth="130"/>
            <TableColumn fx:id="colAccountNumber" text="Cuenta" prefWidth="150" minWidth="130"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No se encontraron comprobantes de pago" styleClass="table-placeholder"/>
        </placeholder>
    </TableView>

    <!-- Empty State Message -->
    <VBox fx:id="emptyStateBox" alignment="CENTER" spacing="15" visible="false" managed="false"
          styleClass="empty-state-box">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>
        <Label text="No tienes comprobantes de pago"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #6c757d;"/>
        <Label text="Aquí aparecerán los comprobantes de tus pagos realizados"
               style="-fx-font-size: 14px; -fx-text-fill: #adb5bd;"/>
    </VBox>

</VBox>
