<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.DeliveryShipmentsController"
      spacing="15" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Mis Envíos Asignados" styleClass="page-title"/>
            <Label text="Gestiona y actualiza el estado de tus envíos" styleClass="info-label"/>
        </VBox>
        <Button text="Actualizar" onAction="#handleRefresh" styleClass="btn-secondary"/>
    </HBox>

    <!-- Collapsible Tab System -->
    <VBox fx:id="collapsibleTabSection" spacing="0" styleClass="collapsible-tab-section tab-section-expanded"
          VBox.vgrow="NEVER" minHeight="60" maxHeight="280">
        <!-- Header with Collapse Button -->
        <HBox styleClass="tab-header-with-collapse" minHeight="60" prefHeight="60" maxHeight="60">
            <HBox styleClass="tab-nav-bar" HBox.hgrow="ALWAYS">
                <Button fx:id="btnTabStats" text="Estadísticas" styleClass="tab-button tab-button-active"
                        onAction="#switchToStatsTab"/>
                <Button fx:id="btnTabFilters" text="Filtros" styleClass="tab-button"
                        onAction="#switchToFiltersTab"/>
            </HBox>
            <Button fx:id="btnCollapseToggle" text="▲" styleClass="collapse-toggle-btn"
                    onAction="#toggleCollapse"/>
        </HBox>

        <!-- Tab Content Container -->
        <StackPane styleClass="tab-content-container" maxHeight="220" prefHeight="220">
            <!-- Stats Tab Content -->
            <HBox fx:id="statsTabContent" spacing="15" managed="true" visible="true">
                <padding>
                    <Insets top="25" right="25" bottom="15" left="25"/>
                </padding>
                <VBox styleClass="tab-stat-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Total" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblTotal" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
                </VBox>
                <VBox styleClass="tab-stat-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Pendientes" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblPending" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                </VBox>
                <VBox styleClass="tab-stat-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="En Tránsito" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblInTransit" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                </VBox>
                <VBox styleClass="tab-stat-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Entregados" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDelivered" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                </VBox>
            </HBox>

            <!-- Filters Tab Content -->
            <VBox fx:id="filtersTabContent" spacing="15" managed="false" visible="false">
                <padding>
                    <Insets top="25" right="25" bottom="15" left="25"/>
                </padding>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Filtrar por estado:" styleClass="label-bold"/>
                    <ComboBox fx:id="filterStatus" prefWidth="200" styleClass="filter-combo"/>

                    <Label text="Buscar:" styleClass="label-bold"/>
                    <TextField fx:id="searchField" promptText="Buscar por ID o dirección..."
                               prefWidth="300" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Limpiar Filtros" styleClass="btn-secondary" onAction="#handleClearFilters"/>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>

    <!-- Shipments Table Section -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Envíos Asignados" styleClass="section-title" HBox.hgrow="ALWAYS"/>
        </HBox>

        <TableView fx:id="shipmentsTable" VBox.vgrow="ALWAYS" styleClass="data-table" minHeight="300" prefHeight="500">
            <columns>
                <TableColumn fx:id="colShipmentId" text="ID Envío" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="colOrigin" text="Origen" prefWidth="180" minWidth="150"/>
                <TableColumn fx:id="colDestination" text="Destino" prefWidth="180" minWidth="150"/>
                <TableColumn fx:id="colStatus" text="Estado" prefWidth="130" minWidth="110"/>
                <TableColumn fx:id="colDate" text="Fecha" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="colCost" text="Costo" prefWidth="100" minWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="No hay envíos asignados" styleClass="table-placeholder"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Information Section -->
    <HBox spacing="10" styleClass="info-section" alignment="CENTER_LEFT">
        <Label text="Haga clic derecho en un envío para abrir el menú contextual"
               styleClass="info-label-italic"/>
    </HBox>

</VBox>
