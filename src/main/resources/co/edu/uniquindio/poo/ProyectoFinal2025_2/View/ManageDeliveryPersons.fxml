<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.ManageDeliveryPersonsController"
      spacing="15" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section con título y botones principales -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Gestionar Repartidores" styleClass="page-title"/>
            <Label text="Administra los repartidores del sistema" styleClass="info-label"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        </VBox>
        <Button text="Agregar Repartidor" onAction="#handleAddDeliveryPerson" styleClass="btn-success"/>
        <Button text="Actualizar" onAction="#handleRefresh" styleClass="btn-primary"/>
    </HBox>

    <!-- Collapsible Tab System -->
    <VBox fx:id="collapsibleTabSection" spacing="0" styleClass="collapsible-tab-section, tab-section-expanded"
          VBox.vgrow="NEVER" minHeight="60">
        <!-- Header with Collapse Button -->
        <HBox styleClass="tab-header-with-collapse" minHeight="60" prefHeight="60" maxHeight="60">
            <HBox styleClass="tab-nav-bar" HBox.hgrow="ALWAYS">
                <Button fx:id="btnTabStats" text="Estadísticas" styleClass="tab-button, tab-button-active"
                        onAction="#switchToStatsTab"/>
                <Button fx:id="btnTabFilters" text="Filtros" styleClass="tab-button"
                        onAction="#switchToFiltersTab"/>
            </HBox>
            <Button fx:id="btnCollapseToggle" text="▲" styleClass="collapse-toggle-btn"
                    onAction="#toggleCollapse"/>
        </HBox>

        <!-- Tab Content Container -->
        <StackPane styleClass="tab-content-container">
            <!-- Stats Tab Content -->
            <HBox fx:id="statsTabContent" spacing="15" managed="true" visible="true">
                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Total" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblTotal" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
                </VBox>

                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Disponibles" style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
                    <Label fx:id="lblAvailable" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                </VBox>

                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="En Tránsito" style="-fx-text-fill: #17a2b8; -fx-font-size: 12px;"/>
                    <Label fx:id="lblInTransit" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                </VBox>

                <VBox styleClass="tab-stat-card" spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="No Disponibles" style="-fx-text-fill: #ffc107; -fx-font-size: 12px;"/>
                    <Label fx:id="lblUnavailable" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                </VBox>
            </HBox>

            <!-- Filters Tab Content -->
            <VBox fx:id="filtersTabContent" spacing="10" managed="false" visible="false">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <ComboBox fx:id="filterAvailability" prefWidth="150" styleClass="combo-box"/>
                    <TextField fx:id="txtSearch" promptText="Buscar por nombre o email..."
                               prefWidth="300" styleClass="search-field"/>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>

    <!-- Table -->
    <TableView fx:id="tableDeliveryPersons" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="colName" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
            <TableColumn fx:id="colPhone" text="Teléfono" prefWidth="100"/>
            <TableColumn fx:id="colDocumentId" text="Documento" prefWidth="100"/>
            <TableColumn fx:id="colAvailability" text="Estado" prefWidth="120"/>
            <TableColumn fx:id="colCoverageArea" text="Área" prefWidth="100"/>
            <TableColumn fx:id="colVehicle" text="Vehículo" prefWidth="150"/>
            <TableColumn fx:id="colShipments" text="Envíos" prefWidth="80"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No se encontraron repartidores" styleClass="table-placeholder"/>
        </placeholder>
    </TableView>

    <!-- Information Section -->
    <HBox spacing="10" styleClass="info-section" alignment="CENTER_LEFT">
        <Label text="Haga clic derecho en un repartidor para ver opciones (Cambiar Estado, Asignar Vehículo, Eliminar)"
               style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-style: italic;"/>
    </HBox>

</VBox>
