<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.ProyectoFinal2025_2.Controller.DeliveryHistoryController"
      spacing="15" styleClass="content-area">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-section">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Historial de Entregas y Ganancias" styleClass="page-title"/>
            <Label fx:id="lblLastUpdated" text="Última actualización: --" styleClass="info-label"/>
        </VBox>
        <Button text="Exportar a PDF" onAction="#handleExportToPdf" styleClass="btn-secondary"/>
        <Button text="Actualizar" onAction="#handleRefresh" styleClass="btn-secondary"/>
    </HBox>

    <!-- Collapsible Tab System -->
    <VBox fx:id="collapsibleTabSection" spacing="0" styleClass="collapsible-tab-section tab-section-expanded"
          VBox.vgrow="NEVER" minHeight="60" maxHeight="600">
        <!-- Header with Collapse Button -->
        <HBox styleClass="tab-header-with-collapse" minHeight="60" prefHeight="60" maxHeight="60">
            <HBox styleClass="tab-nav-bar" HBox.hgrow="ALWAYS">
                <Button fx:id="btnTabEarnings" text="Ganancias" styleClass="tab-button tab-button-active"
                        onAction="#switchToEarningsTab"/>
                <Button fx:id="btnTabDeliveryStats" text="Est. Entrega" styleClass="tab-button"
                        onAction="#switchToDeliveryStatsTab"/>
                <Button fx:id="btnTabFilters" text="Filtros" styleClass="tab-button"
                        onAction="#switchToFiltersTab"/>
            </HBox>
            <Button fx:id="btnCollapseToggle" text="▲" styleClass="collapse-toggle-btn"
                    onAction="#toggleCollapse"/>
        </HBox>

        <!-- Tab Content Container -->
        <StackPane styleClass="tab-content-container" maxHeight="540" prefHeight="540">
            <!-- Earnings Tab Content -->
            <VBox fx:id="earningsTabContent" spacing="15" managed="true" visible="true">
                <padding>
                    <Insets top="30" right="35" bottom="20" left="35"/>
                </padding>
                <!-- Summary Statistics -->
                <HBox spacing="15">
                    <!-- Total Earnings -->
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Ganancias Totales" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTotalEarnings" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
                    </VBox>

                    <!-- This Month -->
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Este Mes" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblMonthEarnings" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                    </VBox>

                    <!-- This Week -->
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Esta Semana" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblWeekEarnings" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                    </VBox>

                    <!-- Today -->
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Hoy" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTodayEarnings" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                    </VBox>

                    <!-- Average per Delivery -->
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Promedio/Entrega" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblAverageEarnings" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6610f2;"/>
                    </VBox>
                </HBox>

                <!-- Charts Row -->
                <HBox spacing="15" prefHeight="300">
                    <!-- Earnings Trend Chart -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Tendencia de Ganancias (Últimos 30 Días)" styleClass="chart-title"/>
                        <LineChart fx:id="chartEarningsTrend"
                                  legendVisible="false"
                                  createSymbols="true"
                                  VBox.vgrow="ALWAYS"
                                  prefHeight="250">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Ganancias ($)" side="LEFT"/>
                            </yAxis>
                        </LineChart>
                    </VBox>

                    <!-- Earnings by Weekday Chart -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Ganancias por Día de la Semana" styleClass="chart-title"/>
                        <BarChart fx:id="chartEarningsByWeekday"
                                 legendVisible="false"
                                 VBox.vgrow="ALWAYS"
                                 prefHeight="250"
                                 barGap="3"
                                 categoryGap="10">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Ganancias ($)" side="LEFT"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Delivery Stats Tab Content -->
            <VBox fx:id="deliveryStatsTabContent" spacing="15" managed="false" visible="false">
                <padding>
                    <Insets top="30" right="35" bottom="20" left="35"/>
                </padding>
                <!-- Delivery Statistics -->
                <HBox spacing="15">
                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Entregas Completadas" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblCompletedDeliveries" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #032d4d;"/>
                    </VBox>

                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Exitosas" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblSuccessfulDeliveries" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                    </VBox>

                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Con Incidencias" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblIncidentDeliveries" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
                    </VBox>

                    <VBox styleClass="tab-stat-card" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label text="Tasa de Éxito" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                        <Label fx:id="lblSuccessRate" text="0%" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                    </VBox>
                </HBox>

                <!-- Deliveries by Status Chart -->
                <VBox spacing="10" prefHeight="300">
                    <Label text="Entregas por Estado" styleClass="chart-title"/>
                    <PieChart fx:id="chartDeliveriesByStatus"
                             legendVisible="true"
                             labelsVisible="true"
                             VBox.vgrow="ALWAYS"
                             prefHeight="250"/>
                </VBox>
            </VBox>

            <!-- Filters Tab Content -->
            <VBox fx:id="filtersTabContent" spacing="15" managed="false" visible="false">
                <padding>
                    <Insets top="30" right="35" bottom="20" left="35"/>
                </padding>

                <!-- Date Range Filters -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Desde:" styleClass="label-bold"/>
                    <DatePicker fx:id="dateFrom" prefWidth="150" styleClass="date-picker"/>

                    <Label text="Hasta:" styleClass="label-bold"/>
                    <DatePicker fx:id="dateTo" prefWidth="150" styleClass="date-picker"/>

                    <Button text="Aplicar" onAction="#handleApplyDateFilter" styleClass="btn-primary"/>
                    <Button text="Limpiar" onAction="#handleClearDateFilter" styleClass="btn-secondary"/>
                </HBox>

                <!-- Quick Filter Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filtros rápidos:" styleClass="label-bold"/>
                    <Button text="Hoy" onAction="#handleToday" styleClass="btn-filter-quick"/>
                    <Button text="Esta Semana" onAction="#handleThisWeek" styleClass="btn-filter-quick"/>
                    <Button text="Última Semana" onAction="#handleLastWeek" styleClass="btn-filter-quick"/>
                    <Button text="Este Mes" onAction="#handleThisMonth" styleClass="btn-filter-quick"/>
                    <Button text="Último Mes" onAction="#handleLastMonth" styleClass="btn-filter-quick"/>
                    <Button text="Últimos 3 Meses" onAction="#handleLast3Months" styleClass="btn-filter-quick"/>
                </HBox>

                <!-- Additional Filters -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Filtrar por estado:" styleClass="label-bold"/>
                    <ComboBox fx:id="filterStatus" prefWidth="180" styleClass="filter-combo"/>

                    <Label text="Monto mínimo:" styleClass="label-bold"/>
                    <TextField fx:id="filterMinAmount" promptText="0.00" prefWidth="100" styleClass="search-field"/>

                    <Label text="Monto máximo:" styleClass="label-bold"/>
                    <TextField fx:id="filterMaxAmount" promptText="999.99" prefWidth="100" styleClass="search-field"/>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>

    <!-- History Table Section -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Historial Detallado" styleClass="section-title" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Buscar por ID o dirección..."
                      prefWidth="300" styleClass="search-field"/>
        </HBox>

        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS" styleClass="data-table" minHeight="300" prefHeight="400">
            <columns>
                <TableColumn fx:id="colDate" text="Fecha" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="colOrderId" text="ID Orden" prefWidth="100" minWidth="80"/>
                <TableColumn fx:id="colRoute" text="Ruta" prefWidth="250" minWidth="200"/>
                <TableColumn fx:id="colStatus" text="Estado" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="colDistance" text="Distancia (km)" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="colEarnings" text="Ganancia" prefWidth="100" minWidth="80"/>
                <TableColumn fx:id="colRating" text="Calificación" prefWidth="100" minWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="No hay entregas completadas" styleClass="table-placeholder"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Information Section -->
    <HBox spacing="10" styleClass="info-section" alignment="CENTER_LEFT">
        <Label text="Haga clic derecho en una entrega para abrir el menú contextual"
               styleClass="info-label-italic"/>
    </HBox>

</VBox>
